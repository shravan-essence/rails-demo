<%= form_with model: [@article, @article.comments.build] do |form|%>
  <p>
    <%= form.label :commenter %><br>
    <%= form.text_field :commenter%>
    <%@article.errors.full_messages_for(:commenter).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </p>

  <p>
    <%= form.label :body %><br>
    <%= form.text_area :body%>
    <% @article.errors.full_messages_for(:body).each do |message| %>
        <div><%= message %></div>
    <% end %>
  </p>
   <p>
    <%= form.label :commentable_type   %><br>
    <%= form.select(:commentable_type, options_for_select([[@article.class.name,@article.class.name]], @article.class.name))%>
  </p>
   <p>
    <%= form.label :commentable_id %><br>
    <%= form.select(:commentable_id, options_for_select([[@article.id,@article.id]], @article.id))%>
  </p>
  <p>
    <%= form.submit %>
  </p>
<% end %>